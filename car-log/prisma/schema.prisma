generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model tbl_users {
  username String     @id @db.VarChar(20)
  realname String     @db.VarChar(20)
  password String     @db.VarChar(255)
  email    String     @db.VarChar(30)
  tbl_logs tbl_logs[]
}

model tbl_logs {
  log_no     Int        @id @default(autoincrement())
  log_div    String     @db.VarChar(20)
  log_start  String     @db.VarChar(30)
  log_end    String?    @db.VarChar(30)
  log_dis    Int?
  log_cost   Int?
  log_place  String?    @db.VarChar(100)
  log_userid String?    @db.VarChar(20)
  tbl_users  tbl_users? @relation(fields: [log_userid], references: [username], onDelete: Cascade, onUpdate: NoAction, map: "fk_user")

  @@index([log_userid], map: "fk_user")
}
